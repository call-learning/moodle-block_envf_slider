{{!
    @template block_slider/block

    Template which defines an RSS Feeds block

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * feeds - array: An array of RSS feeds.

    Example context (json):
    {
        "items":
        [
            "imageurl": "https://example.com"
        ]
    }
}}
<div id="block-envf-slider-{{uniqid}}" class="block-envf-slider position-relative">
    <div class="arrow-container position-absolute text-white d-flex align-items-center justify-content-between user-select-none">
        <span id="arrow-left" class="arrow"><</span>
        <span id="arrow-right" class="arrow">></span>
    </div>
    <div class="d-flex flex-column h-100">
        <ul class="d-flex overflow-hidden flex-nowrap flex-row flex-grow-1">
            {{#slides}}
                {{< block_envf_slider/slide }}{{/ block_envf_slider/slide }}
            {{/slides}}
        </ul>
        <ul class="slidefooter-container d-flex justify-content-center">
            {{#slides}}
                {{< block_envf_slider/slidefooter }}{{/ block_envf_slider/slidefooter }}
            {{/slides}}
        </ul>
    </div>
{{#js}}
    require(['block_slider/glide'], function(glide) {
        glide('#envf-slider-{{uniqid}} .glide', {
                type: 'carousel',
                startAt: 0,
                perView: 4,
                gap: 0,
                autoplay: 0
            }
        );
    });
{{/js}}
</div>
