{{!
    @template block_slider/block

    Template which defines an RSS Feeds block

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * feeds - array: An array of RSS feeds.

    Example context (json):
    {
        "items":
        [
            "imageurl": "https://example.com"
        ]
    }
}}
<div id="block-envf-slider-{{uniqid}}" class="block-slider">
    <ul class="container-fluid">
        {{#slides}}
            {{< block_envf_slider/slide }}{{/ block_envf_slider/slide }}
        {{/slides}}
    </ul>
    <ul>
        {{#slides}}
            {{< block_envf_slider/slidefooter }}{{/ block_envf_slider/slidefooter }}
        {{/slides}}
    </ul>
{{#js}}
    require(['block_slider/glide'], function(glide) {
        glide('#envf-slider-{{uniqid}} .glide', {
                type: 'carousel',
                startAt: 0,
                perView: 4,
                gap: 0,
                autoplay: 0
            }
        );
    });
{{/js}}
</div>
